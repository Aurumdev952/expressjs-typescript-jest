{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "typeRoots": ["src/types", "./node_modules/@types"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "types": ["jest", "mocha", "node"],
    "moduleResolution": "node"
  },
  "exclude": ["./coverage", "./dist", "**/*.test.ts", "jest.config.js"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["./src/**/*.ts"]
}
